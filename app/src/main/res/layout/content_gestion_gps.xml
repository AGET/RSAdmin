<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Vistas.GestionGps"
    tools:showIn="@layout/activity_gestion_gps">

    <ImageView
        android:id="@+id/icono_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mcr_edt_gps_imei"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icono_gps" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mcr_edt_gps_imei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        app:hintTextAppearance="@style/Hint">

        <EditText
            android:id="@+id/edt_gps_imei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:ems="12"
            android:hint="IMEI"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/icono_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mcr_edt_gps_numero"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icono_telefono" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mcr_edt_gps_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcr_edt_gps_imei"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        app:hintTextAppearance="@style/Hint">

        <EditText
            android:id="@+id/edt_gps_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:ems="12"
            android:hint="Numero"
            android:inputType="phone" />
    </android.support.design.widget.TextInputLayout>


    <ImageView
        android:id="@+id/icono_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mcr_edt_gps_descripcion"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icono_correo" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mcr_edt_gps_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcr_edt_gps_numero"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        app:hintTextAppearance="@style/Hint">

        <EditText
            android:id="@+id/edt_gps_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:ems="12"
            android:hint="Descripcion"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/icono_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mcr_edt_gps_empresa"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icono_empresa" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mcr_edt_gps_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcr_edt_gps_descripcion"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        app:hintTextAppearance="@style/Hint">

        <EditText
            android:id="@+id/edt_gps_empresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:ems="12"
            android:hint="Empresa perteneciente"
            android:inputType="textPersonName" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textAutotrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcr_edt_gps_empresa"
        android:layout_marginTop="20dp"
        android:text="@string/txt_title_rastreo"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

    <CheckBox
        android:id="@+id/cbx_rastreo_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textAutotrack"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/textAutotrack"
        android:text="Deshabilitado" />

    <TextView
        android:id="@+id/textTipoTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textAutotrack"
        android:gravity="left"
        android:text="Tiempo"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/spinnerTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textAutotrack"
        android:layout_alignTop="@+id/textTipoTiempo"
        android:layout_toRightOf="@+id/textTipoTiempo"
        android:paddingLeft="10dp" />


    <TextView
        android:id="@+id/textTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerTiempo"
        android:layout_marginTop="8dp"
        android:text="@string/txt_rango_time" />

    <!--android:layout_alignParentRight="true"
android:layout_marginRight="90dp"-->
    <SeekBar
        android:id="@+id/seekBarTiempo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textTiempo"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textResultadoSeekBarTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekBarTiempo"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/seekBarTiempo"
        />


    <TextView
        android:id="@+id/textCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBarTiempo"
        android:text="@string/txt_cantida_msn" />

    <SeekBar
        android:id="@+id/seekBarCantidad"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textCantidad"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textResultadoSeekBarCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekBarCantidad"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/seekBarCantidad"
        />


</RelativeLayout>
